{
  "name": "opencast-studio",
  "version": "2.0.0",
  "private": true,
  "description": "Web-based recording studio for Opencast",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elan-ev/opencast-studio.git"
  },
  "homepage": "https://studio.opencast.org",
  "scripts": {
    "start": "COMMIT_SHA=$(git rev-parse --short HEAD) BUILD_DATE=$(date -u '+%Y-%m-%d') webpack serve --open --mode=development",
    "build:dev": "COMMIT_SHA=$(git rev-parse --short HEAD) BUILD_DATE=$(date -u '+%Y-%m-%d') webpack --progress --mode=development",
    "build:release": "COMMIT_SHA=$(git rev-parse --short HEAD) BUILD_DATE=$(date -u '+%Y-%m-%d') webpack --progress --mode=production",
    "typecheck": "tsc --skipLibCheck",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@babel/core": "^7.22.11",
    "@babel/preset-react": "^7.22.3",
    "@babel/preset-typescript": "^7.21.5",
    "@emotion/babel-plugin": "^11.11.0",
    "@emotion/react": "^11.11.1",
    "@fontsource-variable/roboto-flex": "^5.0.3",
    "@iarna/toml": "^2.2.5",
    "@opencast/appkit": "^0.2.0",
    "@svgr/webpack": "^8.0.1",
    "babel-loader": "^9.1.2",
    "copy-webpack-plugin": "^10.2.4",
    "deepmerge": "^4.3.1",
    "fast-deep-equal": "^3.1.3",
    "html-webpack-plugin": "^5.5.1",
    "i18next": "^22.5.1",
    "i18next-browser-languagedetector": "^7.0.2",
    "mustache": "^4.2.0",
    "mutationobserver-shim": "^0.3.7",
    "oscilloscope": "^1.3.0",
    "react": "^18.2.0",
    "react-beforeunload": "^2.5.3",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.44.3",
    "react-hotkeys": "^2.0.0",
    "react-hotkeys-hook": "^4.4.1",
    "react-i18next": "^12.3.1",
    "react-icons": "^4.9.0",
    "react-page-visibility": "^7.0.0",
    "use-resize-observer": "^9.1.0",
    "webpack": "^5.85.1",
    "webpack-cli": "^5.1.3"
  },
  "devDependencies": {
    "@opencast/eslint-config-ts-react": "^0.1.0",
    "@types/iarna__toml": "^2.0.2",
    "@types/mustache": "^4.2.2",
    "@types/node": "^20.2.5",
    "@types/react": "^18.2.8",
    "@types/react-beforeunload": "^2.1.1",
    "@types/react-dom": "^18.2.4",
    "@types/react-page-visibility": "^6.4.1",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "eslint": "^8.42.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-webpack-plugin": "^4.0.1",
    "fork-ts-checker-webpack-plugin": "^8.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "webpack-dev-server": "^4.15.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    "defaults"
  ]
}
